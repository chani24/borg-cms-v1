{
  "kind": "collectionType",
  "collectionName": "issues",
  "info": {
    "singularName": "issue",
    "pluralName": "issues",
    "displayName": "Issue",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "length": {
      "type": "integer",
      "required": true,
      "default": 4
    },
    "writer": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::writer.writer"
    },
    "body": {
      "type": "blocks",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "region": {
      "type": "enumeration",
      "enum": [
        "Nigeria",
        "West-Africa",
        "Africa",
        "Asia",
        "Europe",
        "North America",
        "America"
      ],
      "required": true,
      "default": "Nigeria"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Insight",
        "Issue-Brief",
        "Report/White Paper",
        "Borg Quarterly"
      ],
      "required": true
    },
    "full_report_url": {
      "type": "string"
    },
    "topics_covered": {
      "type": "json"
    }
  }
}
